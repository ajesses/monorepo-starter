{
  "name": "monorepo-starter",
  "type": "module",
  "version": "1.0.0",
  "private": false,
  "description": "",
  "author": "",
  "license": "ISC",
  "keywords": [],
  "scripts": {
    "bootstrap": "pnpm install",
    "dev:topology": "pnpm --filter @graph/topology dev",
    "dev:room": "pnpm --filter @graph/room dev",
    "build:topology": "pnpm --filter @graph/topology build",
    "build:room": "pnpm --filter @graph/room build",
    "clean": "rimraf node_modules **/*/node_modules **/**/*/node_modules **/*/dist **/**/*/dist",
    "clear": "rimraf 'packages/*/{lib,node_modules}' && rimraf node_modules",
    "commit": "cz",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "cs": "changeset",
    "cs:version": "changeset version",
    "cs:tag": "changeset tag",
    "release": "pnpm build && pnpm release:only",
    "release:only": "changeset publish --registry=https://registry.npmjs.com/",
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.0.0",
    "@changesets/cli": "^2.26.2",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.54.0",
    "eslint-define-config": "^2.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "typescript": "^5.3.2"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
